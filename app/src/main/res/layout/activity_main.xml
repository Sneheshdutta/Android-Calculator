<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-thin"
        android:text="+"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/ed2" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="/"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnClear"
        app:layout_constraintTop_toBottomOf="@+id/btnMul" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-thin"
        android:text="2"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/ed2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-thin"
        android:text="3"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btnAdd"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/ed2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-thin"
        android:text="1"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed2" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="0"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btnClear"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnDot"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="."
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btn0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="x"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnSub" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="-"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="6"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btnSub"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="5"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="4"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="9"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btnMul"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="7"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="8"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:fontFamily="sans-serif-thin"
        android:text="C"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/btnDiv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="397dp"
        android:layout_height="92dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="sans-serif-thin"
        android:text="="
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClear"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/ed1"
        android:layout_width="196dp"
        android:layout_height="67dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:digits="0123456789"
        android:ems="10"
        android:fontFamily="sans-serif-thin"
        android:gravity="bottom|right"
        android:inputType="textPersonName"
        android:textAlignment="textEnd"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ed3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/ed3"
        android:layout_width="196dp"
        android:layout_height="67dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:fontFamily="sans-serif-thin"
        android:gravity="top|left"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:digits="0123456789"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ed1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/ed2"
        android:layout_width="398dp"
        android:layout_height="106dp"
        android:layout_marginTop="79dp"
        android:ems="10"
        android:fontFamily="sans-serif-thin"
        android:gravity="top|left|center_vertical"
        android:inputType="textPersonName"
        android:textAlignment="textEnd"
        android:textSize="75sp"
        android:digits="0123456789"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>